<% include ./partials/Header.ejs %>
<div
  class="w-full bg-center bg-cover h-screen bg-[url('https://images.unsplash.com/photo-1506792006437-256b665541e2?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center"
>
  <div class="w-[25vw] bg-white px-20 py-20 rounded-[30px]">
    <h1
      class="text-2xl text-center font-semibold text-zinc-700 tracking-tighter captalize leading-none"
    >
      Welcome to pintrest
    </h1>
    <form action="/login" method="post">
      <input
        class="block border-2 rounded-md mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="block border-2 rounded-md mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="Password"
      />
      <a class="mt-2 inline-block text-sm text-zinc-500 font-semibold" href="#"
        >Forget your Password?</a
      >
      <input
        class="block border-2 rounded-md mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Login"
      />
      <p
        class="text-xs text-center font-semibold text-zinc-700 mt-7 w-3/4 mx-auto"
      >
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge you've read our Privacy Policy; Opens a new tab.
        Notice at collection;
      </p>
    </form>
    <a
      href="/register"
      class="inline-block text-sm text-center mt-2 font-semibold text-zinx-700"
      >Not on Pinterest yet? Sign up</a
    >
  </div>
</div>
