<% include ./partials/Header.ejs %>
<div class="w-full min-h-screen font-semibold bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl"> Create a Post.</h1>
    <hr class="opacity-10 mt-3">
<form action="/createpost" method="post" enctype="multipart/form-data">
    <input class="block w-1/3 px-3 py-2 border-2 "type="file" name="image">
    <input class="block w-1/3 px-3 py-2 mt-2 border-2 text-zinc-800 rounded-md"type="text" placeholder="Title" name="title">
    <textarea class="block w-1/3 h-60 w-80 px-3 py-2 mt-2 border-2 text-zinc-800 rounded-md"type="text" placeholder="Description" name="description"></textarea>
    <input class="block w-1/3 px-3 py-2 mt-2  rounded-md bg-red-700 text-white "type="Submit" value="create" >
</form>
</div>
